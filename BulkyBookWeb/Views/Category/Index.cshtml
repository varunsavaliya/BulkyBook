@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn-primary btn"><i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
        </div>
    </div>
    <br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td><div class="btn-group" role=group><a class="text-decoration-none btn-primary btn" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a></div>
                <div class="btn-group" role=group><a class="text-decoration-none btn-danger btn" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i>Delete</a></div></td>
            </tr>
        }
    </tbody>
</table>
</div>